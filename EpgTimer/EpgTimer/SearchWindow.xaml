<Window x:Class="EpgTimer.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="検索" Height="600" Width="780" xmlns:my="clr-namespace:EpgTimer" WindowStartupLocation="CenterOwner" SizeChanged="Window_SizeChanged" LocationChanged="Window_LocationChanged" Loaded="Window_Loaded" IsVisibleChanged="Window_IsVisibleChanged_1" Closed="Window_Closed" Activated="Window_Activated">
    <!--
    <Window.Resources>
        <ResourceDictionary Source="/PresentationFramework.Aero, Version=4.0.0.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35;component/themes/aero.normalcolor.xaml" />
    </Window.Resources>
-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="420" />
            <RowDefinition Height="35" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TabControl Name="tabControl1" TabStripPlacement="Bottom" Margin="0,0,0,3">
            <TabItem Header="検索条件" Name="tabItem1" KeyDown="tabItem_searchKey_KeyDown">
                <Grid>
                    <my:SearchKey x:Name="searchKeyView" />
                </Grid>
            </TabItem>
            <TabItem Header="録画設定" Name="tabItem2">
                <Grid>
                    <my:RecSettingView x:Name="recSettingView" />
                </Grid>
            </TabItem>
        </TabControl>
        <GridSplitter Grid.Row="0" Height="2" HorizontalAlignment="Stretch" Name="gridSplitter1" VerticalAlignment="Bottom" BorderBrush="DarkGray" Background="DarkGray" />
        <Button Content="検索" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="12,6,0,0" Name="button_search" VerticalAlignment="Top" Width="48" Click="button_search_Click" Style="{StaticResource ButtonStyle1}" ToolTip="Ctrl+F"/>
        <Button Content="予約" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="80,6,0,0" Name="button_add_reserve" VerticalAlignment="Top" Width="48" Click="button_add_reserve_Click" Style="{StaticResource ButtonStyle1}" ToolTip="Ctrl+S : 予約←→無効"/>
        <Button Content="予約全削除" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="134,6,0,0" Name="button_delall_reserve" VerticalAlignment="Top" Width="71" Click="button_delall_reserve_Click" Style="{StaticResource ButtonStyle1}" ToolTip="Ctrl+Shift+D"/>
        <Button Content="自動予約登録を追加" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="231,6,0,0" Name="button_add_epgAutoAdd" VerticalAlignment="Top" Width="113" Click="button_add_epgAutoAdd_Click" Style="{StaticResource ButtonStyle1}" ToolTip="Ctrl+Shift+A"/>
        <Button Content="自動予約登録を変更" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="350,6,0,0" Name="button_chg_epgAutoAdd" VerticalAlignment="Top" Width="113" Click="button_chg_epgAutoAdd_Click" Style="{StaticResource ButtonStyle1}" ToolTip="Ctrl+Shift+C"/>
        <Button Content="自動予約登録を削除" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="469,6,0,0" Name="button_del_epgAutoAdd" VerticalAlignment="Top" Width="113" Click="button_del_epgAutoAdd_Click" Style="{StaticResource ButtonStyle1}" ToolTip="Ctrl+Shift+X"/>
        <Button Content="前へ" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="608,6,0,0" Name="button_up_epgAutoAdd" VerticalAlignment="Top" Width="48" Click="button_up_epgAutoAdd_Click" Style="{StaticResource ButtonStyle1}" ToolTip="Ctrl+↑" ToolTipService.ShowOnDisabled="True"/>
        <Button Content="次へ" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="662,6,0,0" Name="button_down_epgAutoAdd" VerticalAlignment="Top" Width="48" Click="button_down_epgAutoAdd_Click" Style="{StaticResource ButtonStyle1}" ToolTip="Ctrl+↓" ToolTipService.ShowOnDisabled="True"/>
        <ListView Grid.Row="2" Name="listView_result" Margin="10" SelectionMode="Extended" ItemsSource="{Binding}" GridViewColumnHeader.Click="GridViewColumnHeader_Click" PreviewKeyDown="listView_result_PreviewKeyDown" >
            <ListView.Resources>
                <ContextMenu x:Key="itemMenu" x:Name="cmdMenu" Loaded="cmdMenu_Loaded">
                    <MenuItem Name="cmdOnOff" Header="予約←→無効" Click="MenuItem_Click_ChangeOnOff" InputGestureText="Ctrl+S" />
                    <MenuItem Name="cmdAdd" Header="予約追加">
                        <MenuItem Header="ダイアログ表示" Click="MenuItem_Click_ShowDialog"  InputGestureText="Enter" />
                        <Separator/>
                        <MenuItem Name="cmdPreset" Header="プリセット" />
                    </MenuItem>
                    <MenuItem Name="cmdChg" Header="変更">
                        <MenuItem Header="ダイアログ表示" Click="MenuItem_Click_ShowDialog"  InputGestureText="Enter" />
                        <Separator/>
                        <MenuItem Header="全サービス (_0)" Tag="0" Click="MenuItem_Click_RecMode" />
                        <MenuItem Header="指定サービス (_1)" Tag="1" Click="MenuItem_Click_RecMode" />
                        <MenuItem Header="全サービス（デコード処理なし） (_2)" Tag="2" Click="MenuItem_Click_RecMode" />
                        <MenuItem Header="指定サービス（デコード処理なし） (_3)" Tag="3" Click="MenuItem_Click_RecMode" />
                        <MenuItem Header="視聴 (_4)" Tag="4" Click="MenuItem_Click_RecMode" />
                        <MenuItem Header="無効 (_5)" Tag="5" Click="MenuItem_Click_RecMode" />
                        <Separator/>
                        <MenuItem Name="cmdPri" Tag="優先度 {0}">
                            <MenuItem Header="1 (_1)" Tag="1" Click="MenuItem_Click_Priority" />
                            <MenuItem Header="2 (_2)" Tag="2" Click="MenuItem_Click_Priority" />
                            <MenuItem Header="3 (_3)" Tag="3" Click="MenuItem_Click_Priority" />
                            <MenuItem Header="4 (_4)" Tag="4" Click="MenuItem_Click_Priority" />
                            <MenuItem Header="5 (_5)" Tag="5" Click="MenuItem_Click_Priority" />
                        </MenuItem>
                    </MenuItem>
                    <MenuItem Name="cmdDlt" Header="削除" Click="MenuItem_Click_DeleteItem" InputGestureText="Ctrl+D, Delete" />
                    <MenuItem Name="cmdProgramTable" Header="番組表へジャンプ" Click="MenuItem_Click_ProgramTable"  InputGestureText="F3" />
                    <MenuItem Name="cmdResearch" Header="番組名で再検索" Click="MenuItem_Click_Research" />
                    <MenuItem Name="cmdResearch2" Header="番組名で再検索(サブウィンドウ)" Click="MenuItem_Click_Research2" ToolTipService.ShowOnDisabled="True" />
                    <Separator Name="cm_CmAppend" />
                    <MenuItem Name="cm_CopyTitle" Header="番組名をコピー" Click="MenuItem_Click_CopyTitle" InputGestureText="Ctrl+C" />
                    <MenuItem Name="cm_CopyContent" Header="番組情報をコピー" Click="MenuItem_Click_CopyContent" />
                    <MenuItem Name="cm_SearchTitle" Header="番組名をネットで検索" Click="MenuItem_Click_SearchTitle" />
                </ContextMenu>
                <Style TargetType="ListViewItem">
                    <Setter Property="ToolTipService.ShowDuration" Value="20000" />
                    <Setter Property="ToolTip" Value="{Binding ToolTipView}"/>
                    <Setter Property="Foreground"  Value="{Binding ForeColor}" />
                    <Setter Property="Background" Value="{Binding BackColor}" />
                    <Setter Property="ContextMenu" Value="{DynamicResource itemMenu}" />
                    <EventSetter Event="MouseDoubleClick" Handler="listView_result_MouseDoubleClick" />
                    <EventSetter Event="KeyDown" Handler="listView_result_KeyDown" />
                    <Setter Property="BorderThickness" Value="5,0,0,1" />
                    <Setter Property="BorderBrush" Value="{Binding BorderBrush}" />
                </Style>
            </ListView.Resources>
            <ListView.View>
                <GridView x:Name="gridView_result">
                    <GridViewColumn Width="35">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Content="状態" Tag="Status" HorizontalContentAlignment="Left" />
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=Status}" Foreground="{Binding Path=StatusColor}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=StartTime}">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Content="日時" HorizontalContentAlignment="Left"/>
                        </GridViewColumn.Header>
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=ProgramDuration}">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Content="時間（長さ）" HorizontalContentAlignment="Left"/>
                        </GridViewColumn.Header>
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=EventName}">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Content="番組名" HorizontalContentAlignment="Left"/>
                        </GridViewColumn.Header>
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=NetworkName}">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Content="ネットワーク" HorizontalContentAlignment="Left"/>
                        </GridViewColumn.Header>
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=ServiceName}">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Content="サービス名" HorizontalContentAlignment="Left"/>
                        </GridViewColumn.Header>
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=ProgramContent}">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Content="番組内容" HorizontalContentAlignment="Left" />
                        </GridViewColumn.Header>
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=JyanruKey}">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Content="ジャンル" HorizontalContentAlignment="Left" />
                        </GridViewColumn.Header>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
